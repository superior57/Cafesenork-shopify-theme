<style>
  .main_nav div.logo a {
    padding-top: {{ section.settings.logo_top_padding }}px;
    padding-bottom: {{ section.settings.logo_top_padding }}px;
  }

  div.logo img {
    max-width: {{ section.settings.logo_display_width }}px;
  }

  .nav {
    {% if section.settings.menu_position == "block" %}
      width: 100%;
      clear: both;
    {% elsif section.settings.logo_position == "left" %}
      width: 84%;
      float: left;
    {% else %}
      width: 42%;
      float: left;
    {% endif %}
  }

  {% if section.settings.menu_top_padding %}
    .nav ul.menu {
      padding-top: {{ section.settings.menu_top_padding }}px;
      padding-bottom: {{ section.settings.menu_top_padding }}px;
    }

    .sticky_nav ul.menu, .sticky_nav .mini_cart {
      padding-top: {{ section.settings.menu_top_padding | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.menu_top_padding | divided_by: 2 }}px;
    }
  {% endif %}

  {% unless section.settings.show_cart %}
    #header .top_bar .icon-search {
      right: 15px;
    }
  {% endunless %}

  {% if section.settings.fixed_header == false %}
    @media only screen and (max-width: 798px) {
      .header-section {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
      }
    }
  {% endif %}
  @media only screen and (max-width: 797px) {
    .promo_banner{
      height: {{ section.settings.promo_height_m }}px !important;
      line-height: {{ section.settings.promo_height_m }}px !important;
    }
    .promo_banner-show {
      height: {{ section.settings.promo_height_m }}px !important;
    }
    .promo_banner p {
      font-size: 11px;
      padding-right: 2px;
      padding-left: 2px;
      display: block;
    }
  }
  @media only screen and (min-width: 798px) {
    .promo_banner {
      height: {{ section.settings.promo_height }}px !important;
      line-height: {{ section.settings.promo_height }}px !important;
    }
    .promo_banner p {
      padding-right: 2px;
      padding-left: 2px;
      display: inline;
    }
  }
  
</style>

