  -moz-osx-font-smoothing: grayscale;

  @include respond-to('medium'){
    font-size: floor($font-size * 0.8) * 1px;
  }
}

@mixin word-wrap {
  overflow-wrap: break-word;
  word-wrap: break-word;
  -ms-word-break: break-word;
  word-break: break-word;
}

